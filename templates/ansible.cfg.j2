[defaults]
remote_user = {{ current_user }}
host_key_checking = False
retry_files_enabled = False
collections_paths = ~/.ansible/collections:/usr/share/ansible/collections:/etc/ansible/collections
roles_path = ~/.ansible/roles:/usr/share/ansible/roles:/etc/ansible/roles
bin_ansible_callbacks = true
interpreter_python = auto_silent
localhost_warning = False
deprecation_warnings = False 
stdout_callback = ansible.builtin.default
callback_result_format = yaml
inventory = localhost,
ansible_localhost_warning=false
ansible_deprecation_warnings=false
force_color = True
fact_caching = jsonfile
fact_caching_connection = /tmp/ansible_fact_cache
fact_caching_timeout = 7200

[galaxy]
server_list = validated, published, galaxy

[galaxy_server.published]
url=https://console.redhat.com/api/automation-hub/content/published/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
{% if automation_hub_token is defined and automation_hub_token != '' %}
token={{ automation_hub_token }}
{% endif %}

[galaxy_server.validated]
url=https://console.redhat.com/api/automation-hub/content/validated/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
{% if automation_hub_token is defined and automation_hub_token != '' %}
token={{ automation_hub_token }}
{% endif %}

[galaxy_server.galaxy]
url=https://galaxy.ansible.com/
